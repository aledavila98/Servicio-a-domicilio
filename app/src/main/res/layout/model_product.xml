<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_imagen"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:contentDescription="DescripciÃ³n del contenido de la imagen"
                android:scaleType="fitXY"
                android:src="@android:drawable/ic_menu_gallery" />

            <LinearLayout
                android:layout_width="189dp"
                android:layout_height="129dp"
                android:layout_weight="0.97"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/textView_superior"
                    android:layout_width="273dp"
                    android:layout_height="wrap_content"
                    android:text="Titulo"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/textView_inferior"
                    android:layout_width="272dp"
                    android:layout_height="2dp"
                    android:layout_weight="0.73"
                    android:text="Descripcion"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.24" />

                <LinearLayout
                    android:layout_width="301dp"
                    android:layout_height="56dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:layout_weight="0.23" />

                        <EditText
                            android:id="@+id/txtCantidad"
                            android:layout_width="83dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.23"
                            android:ems="10"
                            android:hint="Cantidad"
                            android:inputType="number" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.39" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/cart"
                            android:drawablePadding="8dp"
                            android:id="@+id/btn_addCarrito"
                            android:textColor="@android:color/white"
                            app:backgroundTint="#ef9a9a"
                            android:text="Agregar"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />

                        <Space
                            android:layout_width="58dp"
                            android:layout_height="40dp"
                            android:layout_weight="0.23" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>